<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, url: book_path,method: :put do |f| %>
        <div class ="form-group">
          <label for ="book_title">Title</label>
          <input class="form-control book_title" type="text" name="book[title]">
        </div>
    
        <div class ="form-group">
          <label for ="book_body">Opinion</label>
          <textarea class="form-control book_body" name ="book[body"></textarea>
        </div>
  
        <div class ="form-group">
          <input type="submit" name ="commit" value="Create Book"
          class ="btn btn-success" data-disable-with="Create Book">
        </div>
      <% end %>
    </div>
  </div>
</div>