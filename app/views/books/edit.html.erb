<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, url: book_path,method: :put do |f| %>
        <div class ="form-group">
          <label for ="book_title">Title</label>
          <%=f.text_field :title ,class:"form-control book_title"%>
         
        </div>
    
        <div class ="form-group">
          <label for ="book_body">Opinion</label>
          <%=f.text_area :body,class:"form-control book_body" %>
        </div>
  
        <div class ="form-group">
          <input type="submit" name ="commit" value="Update Book"
          class ="btn btn-success" data-disable-with="Create Book">
        </div>
      <% end %>
      <%= link_to "Show",book_path(@book.id)%> | <%=link_to "Back",books_path %>
    </div>
  </div>
</div>