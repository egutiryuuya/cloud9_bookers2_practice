
<% if @book.errors.any? %>
<%= @book.errors.count %>件のエラーが発生しました<br>
<% @book.errors.full_messages.each do |message| %>
<%= message %>
<% end %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-3 mx-auto">
      <%= render "/users/info",user: @user %>
      <%= render "new",book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class ="table">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td><%=link_to user_path(book) do %>
              <%= image_tag book.user.get_profile_image %>
              <% end %>
            </td>
            <td>
              <%=link_to book_path(book) do %>
              <%= book.title %>
              <% end %>
            </td>
            <td>
              <%=link_to book.body %>
            </td>
            <td>
              <% if book.favorited_by?(current_user)%>
              <%=link_to book_favorites_path(book),method: :delete do %>
              <i class="fas fa-solid fa-heart" style="color: red;"></i><%=book.favorites.count %>
              <% end %>
              <% else %>
              <%= link_to book_favorites_path(book),method: :post do %>
              <i class="fas fa-light fa-heart"></i><%=book.favorites.count %>
              <% end %>
              <% end %>
              </td>
            
            <td>コメント数:<%=book.postcomments.count %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>