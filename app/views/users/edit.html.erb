<%=form_with model: @user,url: user_path(current_user),method: :patch do |f| %>
<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <h1>User info</h1>
      <div class ="form_group">
        <label for ="user_name">Name</label>
        <input class ="form-control name" name ="user[name]" type="text",placeholder="@user.name"> 
      </div>
      
      <div class ="form_group mt-3">
        <label for ="inputImage">ProfileImage</label><br>
        <%= f.file_field :image,placeholder:"プロフィール画像", accept: "image/*"%><br>
      </div>
      
      <div class ="form_group mt-3">
        <label for ="user_introduction">Introduction</label>
        <textarea class ="form-control introduction" name="user[introduction]"></textarea>
      </div>
      
      <div class="form-group mt-3">
        <input type="submit" name ="commit" value="Update User" class ="btn btn-secondary mt-5">
      </div>
      <%end %>
    </div>
  </div>
</div>