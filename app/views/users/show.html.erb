<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!--ユーザー編集欄-->
      <h1>User info</h1>
      <td><%=image_tag @user.get_profile_image %></td>
      <table class="table">
          <tr>
            <td>name</td>
            <td><%=@user.name %></td>
          </tr>
          <tr>
            <td>introduction</td>
            <td><%=@user.introduction %></td>
          </tr>
      </table>
     
     <%=link_to edit_user_path(current_user) ,class:"btn btn-default btn-block btn-outline-secondary" do %>
       <i class="fas fa-user-cog"></i>
     <% end %>
     
     <h1 class ="mt-5">New book</h1>
     <%= form_with model: @book, url:books_path,method: :post do |f| %>
         <div class= "form-group">
           <label for ="book_title">Title</label>
           <input class="form-control book_title" type="text" name="book[title]">
         </div>
         <div class="form-group">
           <label for ="book_body">Opinion</label>
            <textarea class="form-control book_body" name="book[body]"></textarea>
         </div>
         <div class ="form-group">
           <input type="submit" name ="commit" value="Create Book"
           class ="btn btn-success" data-disable-with="Create Book">
         </div>
     <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
       <table class ="table table-hover table-inverse">
         <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
         </tr>
         <% @books.each do |book| %>
         <tr>
           <td><%=image_tag book.user.get_profile_image %></td>
           <td>
             <%= link_to book_path(book) do %>
               <%= book.title %>
             <% end %>
           </td>
           <td>
             <%= book.body %>
           </td>
           <% end %>
         </tr>
       </table>
    </div>
  </div>
</div>