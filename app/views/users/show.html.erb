<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!--ユーザー編集欄-->
      <%=render "info",user: @user %>
     
     
     <h1 class ="mt-5">New book</h1>
     <%= form_with model: @book, url:books_path,method: :post do |f| %>
         <div class= "form-group">
           <label for ="book_title">Title</label>
           <input class="form-control book_title" type="text" name="book[title]">
         </div>
         <div class="form-group">
           <label for ="book_body">Opinion</label>
            <textarea class="form-control book_body" name="book[body]"></textarea>
         </div>
         <div class ="form-group">
           <input type="submit" name ="commit" value="Create Book"
           class ="btn btn-success" data-disable-with="Create Book">
         </div>
     <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
       <table class ="table table-hover table-inverse">
         <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
         </tr>
         <% @books.each do |book| %>
         <tr>
           <td>
             <%=link_to user_path(book.user) do %>
             <%=image_tag @user.get_profile_image %>
             <% end %>
            </td>
           <td>
             <%= link_to book_path(book) do %>
               <%= book.title %>
             <% end %>
           </td>
           <td>
             <%= book.body %>
           </td>
           <% end %>
         </tr>
       </table>
    </div>
  </div>
</div>